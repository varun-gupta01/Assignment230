#include <iostream>
using namespace std;

void printSpiral(int n) {
    int spiral[n][n];  
    int num = 1;
    int top = 0, bottom = n - 1, left = 0, right = n - 1;

      while (top <= bottom && left <= right) {
        for (int j = left; j <= right; j++) {
            spiral[top][j] = num++;
        }
        top++;

        for (int j = top; j <= bottom; j++) {
            spiral[j][right] = num++;
        }
        right--;

        if (top <= bottom) {
            for (int j = right; j >= left; j--) {
                spiral[bottom][j] = num++;
            }
            bottom--;
        }

        if (left <= right) {
            for (int j = bottom; j >= top; j--) {
                spiral[j][left] = num++;
            }
            left++;
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << spiral[i][j] << " ";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "provide the size of the spiral: ";
    cin >> n;
    
    printSpiral(n);
    
    return 0;
}
